# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /api                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /api/assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Jobs
# GET     /api/jobs               controllers.JobsController.get(id:Int)
# POST     /assets/jobs               controllers.Assets.versioned(path="/public", file: Asset)

# Employees
GET     /api/employees/:id              controllers.EmployeesController.getEmployee(id:Int)
POST     /api/employees/               controllers.EmployeesController.CreateEmployees(list:List)